package com.shinhan.day07.lab2;

public abstract class Rectangle extends Shape implements Resizeable {

	double width;
	double height;
	
	public Rectangle(double w, double h) {
		super(4);
		this.width = w;
		this.height =h;
	}
	public void resize(double s) {
		width *= s;
		height *= s;
	};


	@Override
	public double getArea() {
		return width*height;
	}

	@Override
	public double getPerimeter() {
		return 2 * (width + height);
	}

}
