package com.shinhan.day04;

public class Person {
	int numberOfPersons=0;
	int age;
	String name;
	
	Person() {
		age = 12;
		name = "Anonymous";
		numberOfPersons++;
	}
	
	Person(int age, String name) {
		this.age = age;
		this.name = name;
		numberOfPersons++;
	}
	
	void selfIntroduce() {
		System.out.println("내 이름은 "
				+ name
				+ " 이며, 나이는 "
				+ age
				+ " 살 입니다. ");
	}
	int getPopulation() {
		System.out.println("전체 인구수는 "
				+ numberOfPersons
				+ " 명입니다.");
		return numberOfPersons;
	}
}
