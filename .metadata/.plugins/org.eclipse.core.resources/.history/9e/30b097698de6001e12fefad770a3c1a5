package com.shinhan.day07.CH8;

//람다표현식 가능한지 컴파일타임에 check하기
//추상메서드가 반드시 1개만 가능하다.
@FunctionalInterface
interface Calculable{
	void calculate(int x, int y);
}

public class LambdaTest2 {
	public static void main(String[] args) {
		call(new Calculable() {
			public	void calculate(int x, int y) {
				System.out.println("익명구현class x + y =" + (x+y));
			}

		});
		call((x, y) -> System.out.println("람다식class x + y =" + (x+y)));
		call((a, b) -> System.out.println("람다식class x - y =" + (x-y)));
		call((int x, int y) -> System.out.println("익명구현class x - y =" + (x-y)));

	}

	private static void call(Calculable calculable) {
		cal.calculate(1, 2);
	}
}
