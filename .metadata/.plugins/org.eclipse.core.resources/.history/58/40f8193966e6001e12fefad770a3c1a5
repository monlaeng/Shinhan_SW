package com.shinhan.day07;

import com.shinhan.day07.lab2.Shape;

public class RectTriangle extends Shape {

	double width;
	double height;
	
	RectTriangle(int numSIdes) {
		super(numSIdes);
		// TODO Auto-generated constructor stub
	}
	
	void RectTrianle(double w, double h) {
		this.width = w;
		this.height = h;
	}

	@Override
	double getArea() {
		
		return width * height /2;
	}

	@Override
	double getPerimeter() {
		// TODO Auto-generated method stub
		return 0;
	}

}
